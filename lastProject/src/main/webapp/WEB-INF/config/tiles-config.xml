		<put-attribute name="content" value="/WEB-INF/layout/content.jsp"></put-attribute>
		<put-attribute name="content2" value="/WEB-INF/layout/content2.jsp"></put-attribute>
	</definition>
	<definition name="signup" extends="index">
		<put-attribute name="content" value="/WEB-INF/member/signup.jsp"/>
	</definition>
	<definition name="login" extends="index">
		<put-attribute name="content" value="/WEB-INF/member/login.jsp"/>
	</definition>
	<definition name="myPage" extends="index">
		<put-attribute name="content" value="/WEB-INF/member/mypage.jsp"/>
	</definition>
	<definition name="mypageUpdate" extends="index">
